@code {
    private List<Articulo> articulos = new();
    private string terminoBusqueda = string.Empty;
    private DateTime? fechaDesde;
    private DateTime? fechaHasta;
    private string mensaje = string.Empty;
    private string tipoAlerta = "info";

    protected override async Task OnInitializedAsync()
    {
        await Listar();
    }

    private async Task Listar()
    {
        using var contexto = await DbFactory.CreateDbContextAsync();
        articulos = await contexto.Articulos
            .Include(a => a.Categoria)
            .Include(a => a.Periodista)
            .Include(a => a.Institucion)
            .Include(a => a.ServiciosPromocionales)
                .ThenInclude(s => s.ServicioPromocional)
            .OrderByDescending(a => a.FechaCreacion)
            .ToListAsync();
    }

    private List<Articulo> ArticulosFiltrados => articulos
        .Where(a => string.IsNullOrWhiteSpace(terminoBusqueda)
                    || a.Titulo.Contains(terminoBusqueda, StringComparison.OrdinalIgnoreCase)
                    || (a.Categoria != null && a.Categoria.Nombre.Contains(terminoBusqueda, StringComparison.OrdinalIgnoreCase))
                    || (a.Periodista != null && a.Periodista.Nombres.Contains(terminoBusqueda, StringComparison.OrdinalIgnoreCase))
                    || (a.Institucion != null && a.Institucion.Nombre.Contains(terminoBusqueda, StringComparison.OrdinalIgnoreCase)))
        .Where(a => !fechaDesde.HasValue || a.FechaCreacion >= fechaDesde.Value)
        .Where(a => !fechaHasta.HasValue || a.FechaCreacion <= fechaHasta.Value)
        .ToList();

    private void Buscar() => _ = ArticulosFiltrados;

    private void IrACrear() => Navigation.NavigateTo("/articulos/crear");
    private void IrAEditar(int id) => Navigation.NavigateTo($"/articulos/editar/{id}");

    private async Task Eliminar(int id)
    {
        try
        {
            var resultado = await articuloService.Eliminar(id);
            if (resultado)
            {
                await Listar();
                MostrarMensaje("Artículo eliminado correctamente", "success");
            }
            else
            {
                MostrarMensaje("No se pudo eliminar el artículo", "danger");
            }
        }
        catch (Exception ex)
        {
            MostrarMensaje($"Error: {ex.Message}", "danger");
        }
    }

    private async Task CambiarEstado(int id, EstadoArticulo nuevoEstado)
    {
        try
        {
            var resultado = await articuloService.CambiarEstado(id, nuevoEstado);
            if (resultado != null)
            {
                await Listar();
                MostrarMensaje($"Artículo {nuevoEstado}", "success");
            }
            else
            {
                MostrarMensaje("No se pudo cambiar el estado", "danger");
            }
        }
        catch (Exception ex)
        {
            MostrarMensaje($"Error: {ex.Message}", "danger");
        }
    }

    private void MostrarMensaje(string msg, string tipo)
    {
        mensaje = msg;
        tipoAlerta = tipo;
    }
}

