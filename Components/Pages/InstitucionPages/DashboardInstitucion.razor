@page "/institucion/dashboard"
@attribute [Authorize(Roles = "AdminInstitucion,RedactorInstitucion")]
@layout InstitucionLayout
@inject EncargoArticuloService EncargoService
@inject ArticuloService ArticuloService
@inject UserManager<ApplicationUser> UserManager
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>Dashboard - Institución</PageTitle>

<style>
    .bg-gradient-green {
        background: linear-gradient(135deg, #2d5f4d 0%, #103713 100%);
    }

    .bg-gradient-orange {
        background: linear-gradient(135deg, #ff6b35 0%, #e65100 100%);
    }

    .btn-orange {
        background-color: #e65100;
        color: white;
        border: none;
    }

        .btn-orange:hover {
            background-color: #bf360c;
            color: white;
        }

    .stat-card {
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.15) !important;
        }

    .quick-action-card {
        border: 2px dashed #dee2e6;
        transition: all 0.3s;
        cursor: pointer;
    }

        .quick-action-card:hover {
            border-color: #e65100;
            background: #fff3e0;
        }
</style>

<div class="bg-gradient-green text-white py-4 mb-4">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <div class="bg-white bg-opacity-25 rounded p-3 me-3">
                    <i class="bi bi-speedometer2 fs-2"></i>
                </div>
                <div>
                    <h1 class="h3 fw-bold mb-0">Dashboard</h1>
                    <small class="opacity-75">Bienvenido, @nombreInstitucion</small>
                </div>
            </div>
            <div>
                <span class="badge bg-white text-dark px-3 py-2">
                    <i class="bi bi-calendar me-1"></i>
                    @DateTime.Now.ToString("dd 'de' MMMM, yyyy")
                </span>
            </div>
        </div>
    </div>
</div>

<div class="container pb-5">
    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm stat-card bg-gradient-green text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-1 opacity-75">Total Encargos</h6>
                            <h2 class="mb-0 fw-bold">@totalEncargos</h2>
                            <small class="opacity-75">
                                <i class="bi bi-clock me-1"></i>@encargosActivos activos
                            </small>
                        </div>
                        <div class="bg-white bg-opacity-25 rounded-circle p-3">
                            <i class="bi bi-briefcase fs-3"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm stat-card bg-gradient-orange text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-1 opacity-75">Artículos</h6>
                            <h2 class="mb-0 fw-bold">@totalArticulos</h2>
                            <small class="opacity-75">
                                <i class="bi bi-check-circle me-1"></i>@articulosPublicados publicados
                            </small>
                        </div>
                        <div class="bg-white bg-opacity-25 rounded-circle p-3">
                            <i class="bi bi-file-text fs-3"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm stat-card bg-light">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-1 text-muted">Pendientes Aprobación</h6>
                            <h2 class="mb-0 fw-bold text-warning">@articulosPendientesAprobacion</h2>
                            <small class="text-muted">
                                <i class="bi bi-exclamation-circle me-1"></i>Requieren atención
                            </small>
                        </div>
                        <div class="bg-warning bg-opacity-10 text-warning rounded-circle p-3">
                            <i class="bi bi-hourglass-split fs-3"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm stat-card bg-light">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-1 text-muted">Gastos del Mes</h6>
                            <h2 class="mb-0 fw-bold" style="color: #e65100;">@gastosMes.ToString("N0")</h2>
                            <small class="text-muted">
                                <i class="bi bi-currency-dollar me-1"></i>RD$ pesos
                            </small>
                        </div>
                        <div class="rounded-circle p-3" style="background: #fff3e0; color: #e65100;">
                            <i class="bi bi-cash-stack fs-3"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row mb-4">
        <div class="col-12 mb-3">
            <h5 class="fw-bold">Acciones Rápidas</h5>
        </div>

        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card quick-action-card h-100"
                 @onclick='() => NavigationManager.NavigateTo("/institucion/encargos/crear")'>
                <div class="card-body text-center py-4">
                    <div class="bg-gradient-green text-white rounded-circle p-3 d-inline-flex mb-3">
                        <i class="bi bi-plus-circle fs-2"></i>
                    </div>
                    <h6 class="fw-bold mb-1">Crear Encargo</h6>
                    <small class="text-muted">Solicita un artículo a un periodista</small>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card quick-action-card h-100"
                 @onclick='() => NavigationManager.NavigateTo("/articulos/crear")'>
                <div class="card-body text-center py-4">
                    <div class="bg-gradient-orange text-white rounded-circle p-3 d-inline-flex mb-3">
                        <i class="bi bi-file-earmark-plus fs-2"></i>
                    </div>
                    <h6 class="fw-bold mb-1">Crear Artículo</h6>
                    <small class="text-muted">Escribe un artículo directamente</small>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card quick-action-card h-100"
                 @onclick='() => NavigationManager.NavigateTo("/institucion/encargos")'>
                <div class="card-body text-center py-4">
                    <div class="bg-primary bg-opacity-10 text-primary rounded-circle p-3 d-inline-flex mb-3">
                        <i class="bi bi-list-ul fs-2"></i>
                    </div>
                    <h6 class="fw-bold mb-1">Ver Encargos</h6>
                    <small class="text-muted">Gestiona todos tus encargos</small>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card quick-action-card h-100"
                 @onclick='() => NavigationManager.NavigateTo("/institucion/articulos")'>
                <div class="card-body text-center py-4">
                    <div class="bg-success bg-opacity-10 text-success rounded-circle p-3 d-inline-flex mb-3">
                        <i class="bi bi-files fs-2"></i>
                    </div>
                    <h6 class="fw-bold mb-1">Ver Artículos</h6>
                    <small class="text-muted">Revisa todos tus artículos</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Encargos Recientes -->
    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center py-3">
                    <h6 class="fw-bold mb-0">
                        <i class="bi bi-briefcase me-2" style="color: #2d5f4d;"></i>
                        Encargos Recientes
                    </h6>
                    <a href="/institucion/encargos" class="btn btn-sm btn-outline-secondary">
                        Ver todos <i class="bi bi-arrow-right ms-1"></i>
                    </a>
                </div>
                <div class="card-body p-0">
                    @if (encargosRecientes.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="small">Título</th>
                                        <th class="small">Periodista</th>
                                        <th class="small">Estado</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var encargo in encargosRecientes.Take(5))
                                    {
                                        <tr>
                                            <td class="fw-semibold small">@encargo.TituloSugerido</td>
                                            <td class="text-muted small">@encargo.Periodista?.Nombres</td>
                                            <td>
                                                @if (encargo.Estado == EstadoArticulo.Pendiente)
                                                {
                                                    <span class="badge" style="background: #fff3e0; color: #e65100;">Pendiente</span>
                                                }
                                                else if (encargo.Estado == EstadoArticulo.Enviado)
                                                {
                                                    <span class="badge bg-primary bg-opacity-10 text-primary">Enviado</span>
                                                }
                                                else if (encargo.Estado == EstadoArticulo.AprobadoInstitucion)
                                                {
                                                    <span class="badge bg-success bg-opacity-10 text-success">Aprobado</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5 text-muted">
                            <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                            <small>No hay encargos recientes</small>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-lg-6 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center py-3">
                    <h6 class="fw-bold mb-0">
                        <i class="bi bi-exclamation-circle me-2" style="color: #e65100;"></i>
                        Pendientes de Aprobación
                    </h6>
                    <a href="/institucion/articulos" class="btn btn-sm btn-outline-secondary">
                        Ver todos <i class="bi bi-arrow-right ms-1"></i>
                    </a>
                </div>
                <div class="card-body p-0">
                    @if (articulosPendientes.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="small">Título</th>
                                        <th class="small">Categoría</th>
                                        <th class="small text-end">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var articulo in articulosPendientes.Take(5))
                                    {
                                        <tr>
                                            <td class="fw-semibold small">@articulo.Titulo</td>
                                            <td class="text-muted small">@articulo.Categoria?.Nombre</td>
                                            <td class="text-end">
                                                <button class="btn btn-sm btn-orange"
                                                        @onclick='() => NavigationManager.NavigateTo("/institucion/articulos")'>
                                                    <i class="bi bi-eye me-1"></i>Revisar
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5 text-muted">
                            <i class="bi bi-check-circle fs-1 d-block mb-2"></i>
                            <small>No hay artículos pendientes</small>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 py-3">
                    <h6 class="fw-bold mb-0">
                        <i class="bi bi-clock-history me-2" style="color: #2d5f4d;"></i>
                        Actividad Reciente
                    </h6>
                </div>
                <div class="card-body">
                    @if (actividadReciente.Any())
                    {
                        <div class="timeline">
                            @foreach (var actividad in actividadReciente)
                            {
                                <div class="d-flex mb-3 pb-3 border-bottom">
                                    <div class="me-3">
                                        <div class="rounded-circle p-2" style="background: #f8f9fa;">
                                            <i class="bi @actividad.Icono" style="color: @actividad.Color;"></i>
                                        </div>
                                    </div>
                                    <div class="flex-grow-1">
                                        <div class="fw-semibold small">@actividad.Titulo</div>
                                        <div class="text-muted small">@actividad.Descripcion</div>
                                        <small class="text-muted">
                                            <i class="bi bi-clock me-1"></i>@actividad.Fecha.ToString("dd/MM/yyyy HH:mm")
                                        </small>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4 text-muted">
                            <i class="bi bi-info-circle fs-3 d-block mb-2"></i>
                            <small>No hay actividad reciente</small>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private int institucionIdActual = 0;
    private string nombreInstitucion = "Institución";
    private int totalEncargos = 0;
    private int encargosActivos = 0;
    private int totalArticulos = 0;
    private int articulosPublicados = 0;
    private int articulosPendientesAprobacion = 0;
    private decimal gastosMes = 0;

    private List<EncargoArticulo> encargosRecientes = new();
    private List<Articulo> articulosPendientes = new();
    private List<ActividadReciente> actividadReciente = new();

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity?.IsAuthenticated == true)
        {
            var email = user.FindFirst(ClaimTypes.Email)?.Value;
            if (!string.IsNullOrEmpty(email))
            {
                var appUser = await UserManager.FindByEmailAsync(email);
                if (appUser?.InstitucionId != null)
                {
                    institucionIdActual = appUser.InstitucionId.Value;
                }
            }
        }

        await CargarDatos();
    }

    private async Task CargarDatos()
    {
        if (institucionIdActual > 0)
        {
            var encargos = await EncargoService.GetLista(e => e.InstitucionId == institucionIdActual);
            totalEncargos = encargos.Count;
            encargosActivos = encargos.Count(e => e.Estado == EstadoArticulo.Pendiente || e.Estado == EstadoArticulo.Enviado);
            encargosRecientes = encargos.OrderByDescending(e => e.FechaCreacion).ToList();

            var articulos = await ArticuloService.GetLista(a => a.InstitucionId == institucionIdActual);
            totalArticulos = articulos.Count;
            articulosPublicados = articulos.Count(a => a.Estado == EstadoArticulo.AprobadoEditor || a.Estado == EstadoArticulo.Pagado);
            articulosPendientesAprobacion = articulos.Count(a => a.Estado == EstadoArticulo.Enviado);
            articulosPendientes = articulos.Where(a => a.Estado == EstadoArticulo.Enviado).OrderByDescending(a => a.FechaCreacion).ToList();

            var inicioMes = new DateTime(DateTime.Now.Year, DateTime.Now.Month, 1);
            gastosMes = articulos
                .Where(a => a.FechaCreacion >= inicioMes && (a.Estado == EstadoArticulo.AprobadoEditor || a.Estado == EstadoArticulo.Pagado))
                .Sum(a => a.TotalAPagar);

            GenerarActividadReciente(encargos, articulos);
        }
    }

    private void GenerarActividadReciente(List<EncargoArticulo> encargos, List<Articulo> articulos)
    {
        actividadReciente = new List<ActividadReciente>();

        foreach (var encargo in encargos.OrderByDescending(e => e.FechaCreacion).Take(3))
        {
            actividadReciente.Add(new ActividadReciente
            {
                Titulo = "Encargo creado",
                Descripcion = $"Encargo '{encargo.TituloSugerido}' enviado a {encargo.Periodista?.Nombres}",
                Fecha = encargo.FechaCreacion,
                Icono = "bi-briefcase",
                Color = "#2d5f4d"
            });
        }

        foreach (var articulo in articulos.OrderByDescending(a => a.FechaCreacion).Take(3))
        {
            actividadReciente.Add(new ActividadReciente
            {
                Titulo = articulo.Estado == EstadoArticulo.Pagado ? "Artículo publicado" : "Artículo creado",
                Descripcion = $"Artículo '{articulo.Titulo}' - Estado: {articulo.Estado}",
                Fecha = articulo.FechaCreacion,
                Icono = articulo.Estado == EstadoArticulo.Pagado ? "bi-check-circle" : "bi-file-text",
                Color = articulo.Estado == EstadoArticulo.Pagado ? "#2e7d32" : "#e65100"
            });
        }

        actividadReciente = actividadReciente.OrderByDescending(a => a.Fecha).Take(5).ToList();
    }

    public class ActividadReciente
    {
        public string Titulo { get; set; }
        public string Descripcion { get; set; }
        public DateTime Fecha { get; set; }
        public string Icono { get; set; }
        public string Color { get; set; }
    }
}
