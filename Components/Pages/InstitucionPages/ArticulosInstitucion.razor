@page "/institucion/articulos"
@attribute [Authorize(Roles = "AdminInstitucion,RedactorInstitucion")]
@layout InstitucionLayout
@inject ArticuloService ArticuloService
@inject UserManager<ApplicationUser> UserManager
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>Mis Artículos - Institución</PageTitle>

<style>
    .bg-gradient-green {
        background: linear-gradient(135deg, #2d5f4d 0%, #103713 100%);
    }

    .bg-gradient-orange {
        background: linear-gradient(135deg, #ff6b35 0%, #e65100 100%);
    }

    .btn-orange {
        background-color: #e65100;
        color: white;
        border: none;
    }

        .btn-orange:hover {
            background-color: #bf360c;
            color: white;
        }
</style>

<!-- Page Header -->
<div class="bg-gradient-green text-white py-4 mb-4">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <div class="bg-white bg-opacity-25 rounded p-3 me-3">
                    <i class="bi bi-file-text fs-2"></i>
                </div>
                <div>
                    <h1 class="h3 fw-bold mb-0">Mis Artículos</h1>
                    <small class="opacity-75">Gestiona todos los artículos de tu institución</small>
                </div>
            </div>
            <div>
                <button class="btn btn-orange" @onclick="@(() => NavigationManager.NavigateTo("/articulos/crear"))">
                    <i class="bi bi-plus-circle me-1"></i> Crear Artículo
                </button>
            </div>
        </div>
    </div>
</div>

<div class="container pb-5">
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm bg-gradient-green text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-1 opacity-75">Total Artículos</h6>
                            <h2 class="mb-0 fw-bold">@ListaArticulos.Count()</h2>
                        </div>
                        <div class="bg-white bg-opacity-25 rounded-circle p-3">
                            <i class="bi bi-file-text fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm bg-light">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-1 text-muted">Borradores</h6>
                            <h2 class="mb-0 fw-bold text-secondary">@ListaArticulos.Count(a => a.Estado == EstadoArticulo.Borrador)</h2>
                        </div>
                        <div class="bg-secondary bg-opacity-10 text-secondary rounded-circle p-3">
                            <i class="bi bi-file-earmark fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm bg-gradient-orange text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-1 opacity-75">Pendientes</h6>
                            <h2 class="mb-0 fw-bold">@ListaArticulos.Count(a => a.Estado == EstadoArticulo.Pendiente || a.Estado == EstadoArticulo.Enviado)</h2>
                        </div>
                        <div class="bg-white bg-opacity-25 rounded-circle p-3">
                            <i class="bi bi-clock-history fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm bg-light">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-1 text-muted">Publicados</h6>
                            <h2 class="mb-0 fw-bold text-success">@ListaArticulos.Count(a => a.Estado == EstadoArticulo.AprobadoEditor || a.Estado == EstadoArticulo.Pagado)</h2>
                        </div>
                        <div class="bg-success bg-opacity-10 text-success rounded-circle p-3">
                            <i class="bi bi-check-circle fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <div class="row align-items-end">
                <div class="col-md-3 mb-2">
                    <label class="form-label small fw-semibold text-muted">
                        <i class="bi bi-calendar me-1"></i>Desde
                    </label>
                    <InputDate class="form-control" @bind-Value="desde"></InputDate>
                </div>
                <div class="col-md-3 mb-2">
                    <label class="form-label small fw-semibold text-muted">
                        <i class="bi bi-calendar me-1"></i>Hasta
                    </label>
                    <InputDate class="form-control" @bind-Value="hasta"></InputDate>
                </div>
                <div class="col-md-2 mb-2">
                    <label class="form-label small fw-semibold text-muted">
                        <i class="bi bi-funnel me-1"></i>Filtrar por
                    </label>
                    <InputSelect class="form-select" @bind-Value="Filtro">
                        <option value="" selected disabled>Seleccionar</option>
                        <option value="Titulo">Título</option>
                        <option value="Categoria">Categoría</option>
                        <option value="Estado">Estado</option>
                    </InputSelect>
                </div>
                <div class="col-md-4 mb-2">
                    <label class="form-label small fw-semibold text-muted">
                        <i class="bi bi-search me-1"></i>Búsqueda
                    </label>
                    <div class="input-group">
                        <input class="form-control" @bind="ValorFiltro" placeholder="Buscar..." />
                        <button type="button" class="btn btn-orange" @onclick="Buscar">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Total -->
    <div class="mb-3">
        <span class="text-muted">Total registros: </span>
        <strong style="color: #e65100;">@ListaArticulos.Count()</strong>
    </div>

    <!-- Table -->
    <div class="card border-0 shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-gradient-green text-white">
                    <tr>
                        <th class="py-3">ID</th>
                        <th>Fecha</th>
                        <th>Título</th>
                        <th>Categoría</th>
                        <th>Estado</th>
                        <th>Total</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (ListaArticulos.Any())
                    {
                        @foreach (var articulo in ListaArticulos)
                        {
                            <tr>
                                <td class="text-muted">@articulo.ArticuloId</td>
                                <td class="text-muted small">@articulo.FechaCreacion.ToString("dd/MM/yyyy")</td>
                                <td class="fw-semibold">@articulo.Titulo</td>
                                <td class="text-muted">@articulo.Categoria?.Nombre</td>
                                <td>
                                    @if (articulo.Estado == EstadoArticulo.Borrador)
                                    {
                                        <span class="badge bg-secondary">Borrador</span>
                                    }
                                    else if (articulo.Estado == EstadoArticulo.Pendiente)
                                    {
                                        <span class="badge" style="background: #fff3e0; color: #e65100;">Pendiente</span>
                                    }
                                    else if (articulo.Estado == EstadoArticulo.AprobadoInstitucion)
                                    {
                                        <span class="badge bg-info bg-opacity-10 text-info">Aprobado Institución</span>
                                    }
                                    else if (articulo.Estado == EstadoArticulo.AprobadoEditor)
                                    {
                                        <span class="badge bg-success bg-opacity-10 text-success">Aprobado Editor</span>
                                    }
                                    else if (articulo.Estado == EstadoArticulo.Rechazado)
                                    {
                                        <span class="badge bg-danger bg-opacity-10 text-danger">Rechazado</span>
                                    }
                                    else if (articulo.Estado == EstadoArticulo.Enviado)
                                    {
                                        <span class="badge bg-primary bg-opacity-10 text-primary">En Revisión</span>
                                    }
                                    else if (articulo.Estado == EstadoArticulo.Pagado)
                                    {
                                        <span class="badge bg-success">Publicado</span>
                                    }
                                </td>
                                <td class="fw-bold">RD$ @articulo.TotalAPagar.ToString("N0")</td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <button type="button" class="btn btn-outline-primary" @onclick="() => VerDetalle(articulo.ArticuloId)">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                        @if (articulo.Estado == EstadoArticulo.Borrador)
                                        {
                                            <a href="/articulos/editar/@articulo.ArticuloId" class="btn btn-outline-secondary">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted py-4">
                                <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                No hay artículos registrados
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal Ver Detalle -->
@if (articuloSeleccionado != null && mostrarModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg modal-dialog-scrollable">
            <div class="modal-content border-0 shadow-lg">
                <div class="modal-header border-0 bg-gradient-green text-white">
                    <h5 class="modal-title fw-bold">@articuloSeleccionado.Titulo</h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="CerrarModal"></button>
                </div>
                <div class="modal-body">
                    <!-- Info Grid -->
                    <div class="row mb-4">
                        <div class="col-md-6 mb-3">
                            <div class="text-muted small mb-1">Categoría</div>
                            <div>
                                <span class="badge bg-success bg-opacity-10 text-success px-3 py-2">
                                    @articuloSeleccionado.Categoria?.Nombre
                                </span>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="text-muted small mb-1">Estado</div>
                            <div>
                                @if (articuloSeleccionado.Estado == EstadoArticulo.Borrador)
                                {
                                    <span class="badge bg-secondary px-3 py-2">Borrador</span>
                                }
                                else if (articuloSeleccionado.Estado == EstadoArticulo.Pendiente)
                                {
                                    <span class="badge px-3 py-2" style="background: #fff3e0; color: #e65100;">Pendiente</span>
                                }
                                else if (articuloSeleccionado.Estado == EstadoArticulo.AprobadoEditor)
                                {
                                    <span class="badge bg-success px-3 py-2">Aprobado Editor</span>
                                }
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="text-muted small mb-1">Fecha de Creación</div>
                            <div>
                                <i class="bi bi-calendar me-1"></i>
                                @articuloSeleccionado.FechaCreacion.ToString("dd 'de' MMMM 'de' yyyy")
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="text-muted small mb-1">Total a Pagar</div>
                            <div class="fw-bold fs-5" style="color: #e65100;">
                                <i class="bi bi-currency-dollar me-1"></i>
                                RD$ @articuloSeleccionado.TotalAPagar.ToString("N0")
                            </div>
                        </div>
                    </div>

                    <!-- Resumen -->
                    <div class="mb-4">
                        <h6 class="fw-bold mb-3">Resumen</h6>
                        <div class="bg-light p-3 rounded">
                            <p class="mb-0">@articuloSeleccionado.Resumen</p>
                        </div>
                    </div>

                    <!-- Contenido -->
                    <div class="mb-4">
                        <h6 class="fw-bold mb-3">Contenido</h6>
                        <div class="border rounded p-3" style="max-height: 300px; overflow-y: auto;">
                            <p class="mb-0" style="white-space: pre-wrap;">@articuloSeleccionado.Contenido</p>
                        </div>
                    </div>

                    <!-- Imágenes -->
                    @if (articuloSeleccionado.Imagenes?.Any() == true)
                    {
                        <div class="mb-4">
                            <h6 class="fw-bold mb-3">Imágenes</h6>
                            <div class="row g-2">
                                @foreach (var imagen in articuloSeleccionado.Imagenes)
                                {
                                    <div class="col-md-4">
                                        <img src="@imagen" class="img-fluid rounded shadow-sm" alt="Imagen del artículo">
                                    </div>
                                }
                            </div>
                        </div>
                    }

                    <!-- Servicios Promocionales -->
                    @if (articuloSeleccionado.ServiciosPromocionales?.Any() == true)
                    {
                        <div class="mb-4">
                            <h6 class="fw-bold mb-3">Servicios Promocionales</h6>
                            @foreach (var servicio in articuloSeleccionado.ServiciosPromocionales)
                            {
                                <div class="border rounded p-3 mb-2">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <div class="fw-semibold">@servicio.ServicioPromocional?.Nombre</div>
                                            <small class="text-muted">@servicio.ServicioPromocional?.Descripcion</small>
                                        </div>
                                        <strong style="color: #e65100;">RD$ @servicio.PrecioAplicado.ToString("N0")</strong>
                                    </div>
                                </div>
                            }
                        </div>
                    }

                    <!-- Desglose de Costos -->
                    <div class="bg-light rounded p-3">
                        <h6 class="fw-bold mb-3">Desglose de Costos</h6>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Precio Base (Categoría)</span>
                            <span>RD$ @(articuloSeleccionado.Categoria?.PrecioBase.ToString("N0") ?? "0")</span>
                        </div>
                        @if (articuloSeleccionado.ServiciosPromocionales?.Any() == true)
                        {
                            <div class="d-flex justify-content-between mb-2">
                                <span>Servicios Promocionales</span>
                                <span>RD$ @articuloSeleccionado.TotalPromocional.ToString("N0")</span>
                            </div>
                        }
                        <hr>
                        <div class="d-flex justify-content-between fw-bold fs-5">
                            <span>Total</span>
                            <span style="color: #e65100;">RD$ @articuloSeleccionado.TotalAPagar.ToString("N0")</span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer border-0 bg-light">
                    <button type="button" class="btn btn-secondary" @onclick="CerrarModal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<Articulo> ListaArticulos { get; set; } = new();
    private Articulo? articuloSeleccionado;
    private bool mostrarModal = false;
    private string Filtro { get; set; }
    private string ValorFiltro { get; set; }
    private DateTime? desde { get; set; } = null;
    private DateTime? hasta { get; set; } = null;
    private int institucionIdActual = 0;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity?.IsAuthenticated == true)
        {
            var email = user.FindFirst(ClaimTypes.Email)?.Value;
            if (!string.IsNullOrEmpty(email))
            {
                var appUser = await UserManager.FindByEmailAsync(email);
                if (appUser?.InstitucionId != null)
                    institucionIdActual = appUser.InstitucionId.Value;
            }
        }

        await CargarArticulos();
    }

    private async Task CargarArticulos()
    {
        if (institucionIdActual > 0)
        {
            // Obtener todos los artículos de la institución
            var todosArticulos = await ArticuloService.GetLista(a => a.InstitucionId == institucionIdActual);
            ListaArticulos = todosArticulos;
        }
    }

    private async Task Buscar()
    {
        var prelista = await ArticuloService.GetLista(a => a.InstitucionId == institucionIdActual);

        // Filtrar por fechas
        if (desde.HasValue && hasta.HasValue)
            prelista = prelista.Where(a => a.FechaCreacion.Date >= desde.Value.Date && a.FechaCreacion.Date <= hasta.Value.Date).ToList();

        if (desde.HasValue && !hasta.HasValue)
            prelista = prelista.Where(a => a.FechaCreacion.Date >= desde.Value.Date).ToList();

        if (hasta.HasValue && !desde.HasValue)
            prelista = prelista.Where(a => a.FechaCreacion.Date <= hasta.Value.Date).ToList();

        // Filtrar por texto
        if (!string.IsNullOrWhiteSpace(ValorFiltro))
        {
            prelista = Filtro switch
            {
                "Titulo" => prelista.Where(a => a.Titulo.ToLower().Contains(ValorFiltro.ToLower())).ToList(),
                "Categoria" => prelista.Where(a => a.Categoria != null && a.Categoria.Nombre.ToLower().Contains(ValorFiltro.ToLower())).ToList(),
                "Estado" => prelista.Where(a => a.Estado.ToString().ToLower().Contains(ValorFiltro.ToLower())).ToList(),
                _ => prelista
            };
        }

        ListaArticulos = prelista;
    }

    private async Task VerDetalle(int articuloId)
    {
        articuloSeleccionado = await ArticuloService.GetArticuloCompleto(articuloId);
        mostrarModal = true;
    }

    private void CerrarModal()
    {
        articuloSeleccionado = null;
        mostrarModal = false;
    }
}
