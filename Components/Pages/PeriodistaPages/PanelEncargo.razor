

@page "/periodista/encargos"
@attribute [Authorize(Roles = "Periodista")]
@layout PeriodistaLayout
@inject EncargoArticuloService EncargoService
@inject ArticuloService ArticuloService
@inject UserManager<ApplicationUser> UserManager
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager navigationManager
@rendermode InteractiveServer

<PageTitle>Encargos Propuestos</PageTitle>

<div class="bg-gradient-green text-white py-4 mb-4">
    <div class="container">
        <div class="d-flex align-items-center">
            <div class="bg-white bg-opacity-25 rounded p-3 me-3">
                <i class="bi bi-briefcase fs-2"></i>
            </div>
            <div>
                <h1 class="h3 fw-bold mb-0">Encargos Propuestos</h1>
                <small class="opacity-75">Revisa y gestiona los encargos de artículos que te han propuesto</small>
            </div>
        </div>
    </div>
</div>

<div class="container pb-5">
    <!-- Stats cards -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm bg-gradient-green text-white">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-1 opacity-75">Total Encargos</h6>
                        <h2 class="mb-0 fw-bold">@encargosPendientes.Count()</h2>
                    </div>
                    <div class="bg-white bg-opacity-25 rounded-circle p-3">
                        <i class="bi bi-briefcase fs-4"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm bg-gradient-orange text-white">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-1 opacity-75">Pendientes</h6>
                        <h2 class="mb-0 fw-bold">@encargosPendientes.Count(e => e.Estado == EstadoArticulo.Pendiente)</h2>
                    </div>
                    <div class="bg-white bg-opacity-25 rounded-circle p-3">
                        <i class="bi bi-clock fs-4"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm bg-light">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-1 text-muted">Aceptados</h6>
                        <h2 class="mb-0 fw-bold text-success">0</h2>
                    </div>
                    <div class="bg-success bg-opacity-10 text-success rounded-circle p-3">
                        <i class="bi bi-check-circle fs-4"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm bg-light">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-1 text-muted">Rechazados</h6>
                        <h2 class="mb-0 fw-bold text-danger">0</h2>
                    </div>
                    <div class="bg-danger bg-opacity-10 text-danger rounded-circle p-3">
                        <i class="bi bi-x-circle fs-4"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filter/Search -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label small fw-semibold text-muted">
                        <i class="bi bi-funnel me-1"></i>Filtrar por Estado
                    </label>
                    <select class="form-select" @bind="filtroEstado">
                        <option value="">Todos</option>
                        <option value="Pendiente">Pendiente</option>
                        <option value="Aceptado">Aceptado</option>
                        <option value="Rechazado">Rechazado</option>
                    </select>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label small fw-semibold text-muted">
                        <i class="bi bi-search me-1"></i>Búsqueda
                    </label>
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Título, Categoría o Institución" @bind="busqueda" />
                        <button class="btn btn-orange" @onclick="FiltrarEncargos">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="mb-3">
        <span class="text-muted">Total registros: </span>
        <strong style="color: #e65100;">@encargosPendientes.Count()</strong>
    </div>

    <!-- Encargos list -->
    @if (encargosPendientes == null)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-success" role="status">
                <span class="visually-hidden">Cargando...</span>
            </div>
            <p class="mt-3 text-muted">Cargando encargos...</p>
        </div>
    }
    else if (!encargosPendientes.Any())
    {
        <div class="alert alert-info border-0 shadow-sm">
            <i class="bi bi-info-circle me-2"></i>No tienes encargos pendientes.
        </div>
    }
    else
    {
        @foreach (var encargo in encargosPendientes)
        {
            <div class="card border-0 shadow-sm mb-3 encargo-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div class="flex-grow-1">
                            <div class="d-flex align-items-center mb-2">
                                <span class="badge bg-secondary me-2">#@encargo.EncargoArticuloId</span>
                                <span class="badge bg-warning bg-opacity-25 text-warning me-2">@encargo.Categoria?.Nombre</span>
                                <span class="badge bg-light text-warning">Pendiente</span>
                            </div>
                            <h5 class="fw-bold mb-2">@encargo.TituloSugerido</h5>
                            <p class="text-muted mb-3">@encargo.DescripcionEncargo</p>

                            <div class="row g-3">
                                <div class="col-md-3">
                                    <div class="d-flex align-items-center text-muted small">
                                        <i class="bi bi-building me-2"></i>
                                        <div>
                                            <div class="small fw-semibold">Institución</div>
                                            <div>@encargo.Institucion?.Nombre</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="d-flex align-items-center text-muted small">
                                        <i class="bi bi-calendar me-2"></i>
                                        <div>
                                            <div class="small fw-semibold">Fecha Límite</div>
                                            <div>@encargo.FechaCreacion.AddDays(14).ToString("dd MMM yyyy")</div>
                                            <small class="text-muted">14 días</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="d-flex align-items-center small">
                                        <i class="bi bi-currency-dollar me-2" style="color: #e65100;"></i>
                                        <div>
                                            <div class="small fw-semibold text-muted">Pago</div>
                                            <div class="fw-bold" style="color: #e65100;">RD$ @encargo.TotalAPagar.ToString("N0")</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="d-flex align-items-center text-muted small">
                                        <i class="bi bi-list-check me-2"></i>
                                        <div>
                                            <div class="small fw-semibold">Requisitos</div>
                                            <div>@encargo.ServiciosPromocionales.Count() items</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex gap-2 justify-content-end">
                        <button class="btn btn-sm btn-outline-secondary" @onclick="() => AbrirModalDetalles(encargo)">
                            <i class="bi bi-eye me-1"></i>Ver Detalles
                        </button>
                        <button class="btn btn-sm btn-success" @onclick="() => AceptarEncargo(encargo)">
                            <i class="bi bi-check-circle me-1"></i>Aceptar
                        </button>
                        <button class="btn btn-sm btn-outline-danger" @onclick="() => AbrirModalRechazar(encargo)">
                            <i class="bi bi-x-circle me-1"></i>Rechazar
                        </button>
                    </div>
                </div>
            </div>
        }
    }
</div>

<!-- Detalles Modal -->
@if (encargoSeleccionado != null && detallesModal)
{
    <div class="modal-backdrop fade show"></div>
    <div class="modal d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg modal-dialog-scrollable">
            <div class="modal-content border-0 shadow-lg">
                <div class="modal-header border-0">
                    <h4 class="fw-bold mb-0">@encargoSeleccionado.TituloSugerido</h4>
                    <button type="button" class="btn-close" @onclick="CerrarModal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-4">
                        <h6 class="fw-bold mb-3">Descripción del Encargo</h6>
                        <div class="bg-light p-3 rounded">
                            <p class="mb-0">@encargoSeleccionado.DescripcionEncargo</p>
                        </div>
                    </div>

                    @if (encargoSeleccionado.ServiciosPromocionales?.Any() == true)
                    {
                        <div class="mb-4">
                            <h6 class="fw-bold mb-3">Servicios Promocionales Incluidos</h6>
                            @foreach (var servicio in encargoSeleccionado.ServiciosPromocionales)
                            {
                                <div class="border rounded p-3 mb-2">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <div class="fw-semibold">@servicio.ServicioPromocional?.Nombre</div>
                                            <small class="text-muted">@servicio.ServicioPromocional?.Descripcion</small>
                                        </div>
                                        <strong style="color: #e65100;">RD$ @servicio.PrecioAplicado.ToString("N0")</strong>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
                <div class="modal-footer border-0 bg-light">
                    <button type="button" class="btn btn-secondary" @onclick="CerrarModal">Cerrar</button>
                    <button type="button" class="btn btn-success" @onclick="()=>AceptarEncargo(encargoSeleccionado)">
                        <i class="bi bi-check-circle me-1"></i>Aceptar Encargo
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<!-- Rechazar Modal -->
@if (encargoSeleccionado != null && rechazarModal)
{
    <div class="modal-backdrop fade show"></div>
    <div class="modal d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content border-0 shadow-lg">
                <div class="modal-header border-0">
                    <h5 class="fw-bold">Rechazar encargo</h5>
                    <button type="button" class="btn-close" @onclick="CerrarModal"></button>
                </div>
                <div class="modal-body">
                    <p class="mb-3">@encargoSeleccionado.TituloSugerido</p>
                    <label class="form-label fw-semibold">Comentario de rechazo:</label>
                    <textarea class="form-control" rows="3" @bind="comentarioRechazo" placeholder="Explica el motivo del rechazo..."></textarea>
                </div>
                <div class="modal-footer border-0 bg-light">
                    <button type="button" class="btn btn-secondary" @onclick="CerrarModal">Cancelar</button>
                    <button type="button" class="btn btn-danger" @onclick="RechazarEncargoAsync">
                        <i class="bi bi-x-circle me-1"></i>Rechazar
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<EncargoArticulo> encargosPendientes = new();
    private EncargoArticulo? encargoSeleccionado;
    private bool rechazarModal = false;
    private bool detallesModal = false;
    private string comentarioRechazo = string.Empty;
    private int periodistaId;
    private string filtroEstado = string.Empty;
    private string busqueda = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = await UserManager.GetUserAsync(authState.User);

        if (user == null) return;

        periodistaId = user.PeriodistaId ?? 0;
        await CargarEncargos();
    }

    private async Task CargarEncargos()
    {
        encargosPendientes = await EncargoService.GetLista(e =>
            e.Estado == EstadoArticulo.Pendiente && e.PeriodistaId == periodistaId);
    }

    private void AbrirModalDetalles(EncargoArticulo encargo)
    {
        encargoSeleccionado = encargo;
        detallesModal = true;
        rechazarModal = false;
    }

    private void AbrirModalRechazar(EncargoArticulo encargo)
    {
        encargoSeleccionado = encargo;
        rechazarModal = true;
        detallesModal = false;
        comentarioRechazo = string.Empty;
    }

    private void CerrarModal()
    {
        encargoSeleccionado = null;
        rechazarModal = false;
        detallesModal = false;
        comentarioRechazo = string.Empty;
    }

    private async Task RechazarEncargoAsync()
    {
        if (encargoSeleccionado != null)
        {
            await EncargoService.ResponderEncargo(encargoSeleccionado.EncargoArticuloId, false, comentarioRechazo);
            await CargarEncargos();
            CerrarModal();
            StateHasChanged();
        }
    }

    private async Task AceptarEncargo(EncargoArticulo encargo)
    {
        
    if (encargo == null) return;

    // 1. Actualizar el encargo como aceptado en la base de datos
    await EncargoService.ResponderEncargo(encargo.EncargoArticuloId, true, comentario: null);

    // 2. Recargar la lista de encargos pendientes
    await CargarEncargos();

    // 3. Cerrar modal
    CerrarModal();

    // 4. Navegar a la página de edición del artículo
    navigationManager.NavigateTo($"/articulos/editar/{encargo.EncargoArticuloId}");

    StateHasChanged();

        navigationManager.NavigateTo($"/articulos/editar/{encargo.EncargoArticuloId}");
    }

    private void FiltrarEncargos()
    {
        
    }
}

