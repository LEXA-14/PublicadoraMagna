    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity?.IsAuthenticated == true)
        {
            var email = user.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value;
            if (!string.IsNullOrEmpty(email))
            {
                var appUser = await UserManager.FindByEmailAsync(email);
                if (appUser?.PeriodistaId != null)
                {
                    periodistaIdActual = appUser.PeriodistaId.Value;
                }
            }
        }

        await CargarDatos();
    }

    private async Task CargarDatos()
    {
        if (periodistaIdActual > 0)
        {
            // Cargar encargos
            ListaEncargos = await EncargoService.GetLista(e => e.PeriodistaId == periodistaIdActual);
            totalEncargos = ListaEncargos.Count;

            // Cargar artículos
            ListaArticulos = await ArticuloService.GetLista(a => a.PeriodistaId == periodistaIdActual);
            totalArticulos = ListaArticulos.Count;

            // Calcular stats
            totalAprobados = ListaEncargos.Count(e => e.Estado == EstadoArticulo.AprobadoEditor || e.Estado == EstadoArticulo.AprobadoInstitucion || e.Estado == EstadoArticulo.Pagado) +
                           ListaArticulos.Count(a => a.Estado == EstadoArticulo.AprobadoEditor || a.Estado == EstadoArticulo.AprobadoInstitucion || a.Estado == EstadoArticulo.Pagado);

            totalPendientes = ListaEncargos.Count(e => e.Estado == EstadoArticulo.Pendiente || e.Estado == EstadoArticulo.Enviado) +
                            ListaArticulos.Count(a => a.Estado == EstadoArticulo.Pendiente || a.Estado == EstadoArticulo.Enviado);

            // Combinar listas
            CombinarListas();
        }
    }

    private void CombinarListas()
    {
        var listaTemp = new List<ItemCombinado>();

        // Agregar encargos
        foreach (var encargo in ListaEncargos)
        {
            listaTemp.Add(new ItemCombinado
            {
                Id = encargo.EncargoArticuloId,
                Tipo = "Encargo",
                Titulo = encargo.TituloSugerido,
                Categoria = encargo.Categoria?.Nombre ?? "",
                Fecha = encargo.FechaCreacion,
                Estado = encargo.Estado,
                Comentario = encargo.Estado == EstadoArticulo.Rechazado ? encargo.ComentarioRechazo : encargo.ComentarioPeriodista
            });
        }

        // Agregar artículos
        foreach (var articulo in ListaArticulos)
        {
            listaTemp.Add(new ItemCombinado
            {
                Id = articulo.ArticuloId,
                Tipo = "Articulo",
                Titulo = articulo.Titulo,
                Categoria = articulo.Categoria?.Nombre ?? "",
                Fecha = articulo.FechaCreacion,
                Estado = articulo.Estado,
                Comentario = "" // Los artículos no tienen campo de comentario directo
            });
        }

        // Ordenar por fecha descendente
        ListaCombinadaOriginal = listaTemp.OrderByDescending(x => x.Fecha).ToList();
        ListaCombinada = ListaCombinadaOriginal;
    }

    private void Buscar()
    {
        var prelista = ListaCombinadaOriginal.AsEnumerable();

        // Filtrar por fechas
        if (desde.HasValue)
            prelista = prelista.Where(x => x.Fecha.Date >= desde.Value.Date);

        if (hasta.HasValue)
            prelista = prelista.Where(x => x.Fecha.Date <= hasta.Value.Date);

        // Filtrar por tipo
        if (!string.IsNullOrWhiteSpace(filtroTipo))
        {
            prelista = prelista.Where(x => x.Tipo == filtroTipo);
        }

        // Filtrar por estado
        if (!string.IsNullOrWhiteSpace(FiltroEstado))
        {
            if (Enum.TryParse<EstadoArticulo>(FiltroEstado, out var estado))
            {
                prelista = prelista.Where(x => x.Estado == estado);
            }
        }

        // Filtrar por búsqueda de texto
        if (!string.IsNullOrWhiteSpace(ValorBusqueda))
        {
            prelista = prelista.Where(x =>
                (x.Titulo?.Contains(ValorBusqueda, StringComparison.OrdinalIgnoreCase) ?? false) ||
                (x.Categoria?.Contains(ValorBusqueda, StringComparison.OrdinalIgnoreCase) ?? false)
            );
        }

        ListaCombinada = prelista.ToList();
    }

    // Clase auxiliar para combinar encargos y artículos
    public class ItemCombinado
    {
        public int Id { get; set; }
        public string Tipo { get; set; } = string.Empty;
        public string Titulo { get; set; } = string.Empty;
        public string Categoria { get; set; } = string.Empty;
        public DateTime Fecha { get; set; }
        public EstadoArticulo Estado { get; set; }
        public string? Comentario { get; set; }
    }
