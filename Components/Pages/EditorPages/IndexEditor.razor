@page "/editor/articulos-index"
@attribute [Authorize(Roles = "Editor")]
@layout EditorLayour
@inject ArticuloService ArticuloService
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>Todos los Artículos - Editor</PageTitle>

<style>
    .bg-gradient-green {
        background: linear-gradient(135deg, #2d5f4d 0%, #103713 100%);
    }

    .btn-orange {
        background-color: #e65100;
        color: white;
        border: none;
    }

        .btn-orange:hover {
            background-color: #bf360c;
            color: white;
        }
</style>
<div class="bg-gradient-green text-white py-4 mb-4">
    <div class="container">
        <div class="d-flex align-items-center">
            <div class="bg-white bg-opacity-25 rounded p-3 me-3">
                <i class="bi bi-files fs-2"></i>
            </div>
            <div>
                <h1 class="h3 fw-bold mb-0">Todos los Artículos</h1>
                <small class="opacity-75">Historial completo de artículos revisados</small>
            </div>
        </div>
    </div>
</div>

<div class="container pb-5">
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm bg-gradient-green text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-1 opacity-75">Total Artículos</h6>
                            <h2 class="mb-0 fw-bold">@ListaArticulos.Count()</h2>
                        </div>
                        <div class="bg-white bg-opacity-25 rounded-circle p-3">
                            <i class="bi bi-file-text fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm" style="background: linear-gradient(135deg, #ff6b35 0%, #e65100 100%);">
                <div class="card-body text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-1 opacity-75">Pendientes</h6>
                            <h2 class="mb-0 fw-bold">@ListaArticulos.Count(a => a.Estado == EstadoArticulo.AprobadoInstitucion || a.Estado == EstadoArticulo.Enviado)</h2>
                        </div>
                        <div class="bg-white bg-opacity-25 rounded-circle p-3">
                            <i class="bi bi-hourglass-split fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm bg-light">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-1 text-muted">Aprobados</h6>
                            <h2 class="mb-0 fw-bold text-success">@ListaArticulos.Count(a => a.Estado == EstadoArticulo.AprobadoEditor || a.Estado == EstadoArticulo.Pagado)</h2>
                        </div>
                        <div class="bg-success bg-opacity-10 text-success rounded-circle p-3">
                            <i class="bi bi-check-circle fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm bg-light">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-1 text-muted">Rechazados</h6>
                            <h2 class="mb-0 fw-bold text-danger">@ListaArticulos.Count(a => a.Estado == EstadoArticulo.Rechazado)</h2>
                        </div>
                        <div class="bg-danger bg-opacity-10 text-danger rounded-circle p-3">
                            <i class="bi bi-x-circle fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <div class="row align-items-end">
                <div class="col-md-2 mb-2">
                    <label class="form-label small fw-semibold text-muted">
                        <i class="bi bi-calendar me-1"></i>Desde
                    </label>
                    <InputDate class="form-control" @bind-Value="desde"></InputDate>
                </div>
                <div class="col-md-2 mb-2">
                    <label class="form-label small fw-semibold text-muted">
                        <i class="bi bi-calendar me-1"></i>Hasta
                    </label>
                    <InputDate class="form-control" @bind-Value="hasta"></InputDate>
                </div>
                <div class="col-md-2 mb-2">
                    <label class="form-label small fw-semibold text-muted">
                        <i class="bi bi-funnel me-1"></i>Estado
                    </label>
                    <InputSelect class="form-select" @bind-Value="Filtro">
                        <option value="">Todos</option>
                        <option value="Pendiente">Pendiente</option>
                        <option value="Enviado">Enviado</option>
                        <option value="AprobadoInstitucion">Aprobado Institución</option>
                        <option value="AprobadoEditor">Aprobado Editor</option>
                        <option value="Rechazado">Rechazado</option>
                        <option value="Pagado">Pagado</option>
                    </InputSelect>
                </div>
                <div class="col-md-2 mb-2">
                    <label class="form-label small fw-semibold text-muted">
                        <i class="bi bi-funnel me-1"></i>Tipo Autor
                    </label>
                    <select class="form-select" @bind="tipoAutor">
                        <option value="">Todos</option>
                        <option value="Periodista">Periodista</option>
                        <option value="Institucion">Institución</option>
                    </select>
                </div>
                <div class="col-md-4 mb-2">
                    <label class="form-label small fw-semibold text-muted">
                        <i class="bi bi-search me-1"></i>Búsqueda
                    </label>
                    <div class="input-group">
                        <input class="form-control" @bind="ValorFiltro" placeholder="Título o autor..." />
                        <button type="button" class="btn btn-orange" @onclick="Buscar">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="mb-3">
        <span class="text-muted">Total registros: </span>
        <strong style="color: #e65100;">@ListaArticulos.Count()</strong>
    </div>
    <div class="card border-0 shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-gradient-green text-white">
                    <tr>
                        <th class="py-3">ID</th>
                        <th>Fecha</th>
                        <th>Título</th>
                        <th>Categoría</th>
                        <th>Autor</th>
                        <th>Tipo</th>
                        <th>Estado</th>
                        <th>Total</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (ListaArticulos.Any())
                    {
                        @foreach (var articulo in ListaArticulos)
                        {
                            <tr>
                                <td class="text-muted">@articulo.ArticuloId</td>
                                <td class="text-muted small">@articulo.FechaCreacion.ToString("dd/MM/yyyy")</td>
                                <td class="fw-semibold">@articulo.Titulo</td>
                                <td class="text-muted">@articulo.Categoria?.Nombre</td>
                                <td class="text-muted">
                                    @if (articulo.PeriodistaId.HasValue)
                                    {
                                        <span>@articulo.Periodista?.Nombres</span>
                                    }
                                    else
                                    {
                                        <span>@articulo.Institucion?.Nombre</span>
                                    }
                                </td>
                                <td>
                                    @if (articulo.PeriodistaId.HasValue)
                                    {
                                        <span class="badge bg-primary bg-opacity-10 text-primary">Periodista</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning bg-opacity-10 text-warning">Institución</span>
                                    }
                                </td>
                                <td>
                                    
                                     @if (articulo.Estado == EstadoArticulo.Pendiente)
                                    {
                                        <span class="badge" style="background: #fff3e0; color: #e65100;">Pendiente</span>
                                    }
                                    else if (articulo.Estado == EstadoArticulo.AprobadoInstitucion)
                                    {
                                        <span class="badge bg-info bg-opacity-10 text-info">Aprobado Institución</span>
                                    }
                                    else if (articulo.Estado == EstadoArticulo.AprobadoEditor)
                                    {
                                        <span class="badge bg-success bg-opacity-10 text-success">Aprobado Editor</span>
                                    }
                                    else if (articulo.Estado == EstadoArticulo.Rechazado)
                                    {
                                        <span class="badge bg-danger bg-opacity-10 text-danger">Rechazado</span>
                                    }
                                    else if (articulo.Estado == EstadoArticulo.Enviado)
                                    {
                                        <span class="badge bg-primary bg-opacity-10 text-primary">En Revisión</span>
                                    }
                                    else if (articulo.Estado == EstadoArticulo.Pagado)
                                    {
                                        <span class="badge bg-success">Publicado</span>
                                    }
                                </td>
                                <td class="fw-bold" style="color: #e65100;">RD$ @articulo.TotalAPagar.ToString("N0")</td>
                                <td class="text-center">
                                    <button class="btn btn-sm btn-outline-primary" @onclick="() => VerDetalle(articulo.ArticuloId)">
                                        <i class="bi bi-eye"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="9" class="text-center text-muted py-4">
                                <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                No hay artículos registrados
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@if (articuloSeleccionado != null && mostrarModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-xl modal-dialog-scrollable">
            <div class="modal-content border-0 shadow-lg">
                <div class="modal-header border-0 bg-gradient-green text-white">
                    <h5 class="modal-title fw-bold">@articuloSeleccionado.Titulo</h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="CerrarModal"></button>
                </div>
                <div class="modal-body">
                    <div class="row mb-4">
                        <div class="col-md-3 mb-3">
                            <div class="text-muted small mb-1">Categoría</div>
                            <div>
                                <span class="badge bg-success bg-opacity-10 text-success px-3 py-2">
                                    @articuloSeleccionado.Categoria?.Nombre
                                </span>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="text-muted small mb-1">Autor</div>
                            <div class="fw-semibold">
                                @if (articuloSeleccionado.PeriodistaId.HasValue)
                                {
                                    <div>
                                        <span class="badge bg-primary bg-opacity-10 text-primary me-2">Periodista</span>
                                        @articuloSeleccionado.Periodista?.Nombres
                                    </div>
                                }
                                else
                                {
                                    <div>
                                        <span class="badge bg-warning bg-opacity-10 text-warning me-2">Institución</span>
                                        @articuloSeleccionado.Institucion?.Nombre
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="text-muted small mb-1">Estado</div>
                            <div>
                                @if (articuloSeleccionado.Estado == EstadoArticulo.AprobadoEditor)
                                {
                                    <span class="badge bg-success px-3 py-2">Aprobado Editor</span>
                                }
                                else if (articuloSeleccionado.Estado == EstadoArticulo.Rechazado)
                                {
                                    <span class="badge bg-danger px-3 py-2">Rechazado</span>
                                }
                                else if (articuloSeleccionado.Estado == EstadoArticulo.Pagado)
                                {
                                    <span class="badge bg-success px-3 py-2">Publicado</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning px-3 py-2">@articuloSeleccionado.Estado.ToString()</span>
                                }
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="text-muted small mb-1">Total</div>
                            <div class="fw-bold fs-5" style="color: #e65100;">
                                RD$ @articuloSeleccionado.TotalAPagar.ToString("N0")
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="text-muted small mb-1">Fecha de Creación</div>
                            <div>
                                <i class="bi bi-calendar me-1"></i>
                                @articuloSeleccionado.FechaCreacion.ToString("dd 'de' MMMM 'de' yyyy HH:mm")
                            </div>
                        </div>
                        @if (articuloSeleccionado.FechaAprobacion.HasValue)
                        {
                            <div class="col-md-6 mb-3">
                                <div class="text-muted small mb-1">Fecha de Aprobación</div>
                                <div>
                                    <i class="bi bi-check-circle me-1"></i>
                                    @articuloSeleccionado.FechaAprobacion.Value.ToString("dd 'de' MMMM 'de' yyyy HH:mm")
                                </div>
                            </div>
                        }
                    </div>
                    <div class="mb-4">
                        <h6 class="fw-bold mb-3">Resumen</h6>
                        <div class="bg-light p-3 rounded">
                            <p class="mb-0">@articuloSeleccionado.Resumen</p>
                        </div>
                    </div>
                    <div class="mb-4">
                        <h6 class="fw-bold mb-3">Contenido</h6>
                        <div class="border rounded p-3" style="max-height: 400px; overflow-y: auto;">
                            <p class="mb-0" style="white-space: pre-wrap;">@articuloSeleccionado.Contenido</p>
                        </div>
                    </div>

                    @if (articuloSeleccionado.Imagenes?.Any() == true)
                    {
                        <div class="mb-4">
                            <h6 class="fw-bold mb-3">Imágenes</h6>
                            <div class="row g-2">
                                @foreach (var imagen in articuloSeleccionado.Imagenes)
                                {
                                    <div class="col-md-4">
                                        <img src="@imagen" class="img-fluid rounded shadow-sm" alt="Imagen del artículo">
                                    </div>
                                }
                            </div>
                        </div>
                    }
                    @if (articuloSeleccionado.ServiciosPromocionales?.Any() == true)
                    {
                        <div class="mb-4">
                            <h6 class="fw-bold mb-3">Servicios Promocionales</h6>
                            @foreach (var servicio in articuloSeleccionado.ServiciosPromocionales)
                            {
                                <div class="border rounded p-3 mb-2">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <div class="fw-semibold">@servicio.ServicioPromocional?.Nombre</div>
                                            <small class="text-muted">@servicio.ServicioPromocional?.Descripcion</small>
                                        </div>
                                        <strong style="color: #e65100;">RD$ @servicio.PrecioAplicado.ToString("N0")</strong>
                                    </div>
                                </div>
                            }
                        </div>
                    }

                   
                    <div class="bg-light rounded p-3">
                        <h6 class="fw-bold mb-3">Desglose de Costos</h6>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Precio Base (Categoría)</span>
                            <span>RD$ @(articuloSeleccionado.Categoria?.PrecioBase.ToString("N0") ?? "0")</span>
                        </div>
                        @if (articuloSeleccionado.ServiciosPromocionales?.Any() == true)
                        {
                            <div class="d-flex justify-content-between mb-2">
                                <span>Servicios Promocionales</span>
                                <span>RD$ @articuloSeleccionado.TotalPromocional.ToString("N0")</span>
                            </div>
                        }
                        <hr>
                        <div class="d-flex justify-content-between fw-bold fs-5">
                            <span>Total</span>
                            <span style="color: #e65100;">RD$ @articuloSeleccionado.TotalAPagar.ToString("N0")</span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer border-0 bg-light">
                    <button type="button" class="btn btn-secondary" @onclick="CerrarModal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<Articulo> ListaArticulos { get; set; } = new();
    private List<Articulo> ListaArticulosOriginal { get; set; } = new();
    private Articulo? articuloSeleccionado;
    private bool mostrarModal = false;
    private string Filtro { get; set; } = string.Empty;
    private string ValorFiltro { get; set; } = string.Empty;
    private string tipoAutor { get; set; } = string.Empty;
    private DateTime? desde { get; set; } = null;
    private DateTime? hasta { get; set; } = null;

    protected override async Task OnInitializedAsync()
    {
        await CargarArticulos();
    }

    private async Task CargarArticulos()
    {
        ListaArticulosOriginal = (await ArticuloService.GetLista(a => a.Estado != EstadoArticulo.Borrador))
                                 .Where(a => !string.IsNullOrWhiteSpace(a.Titulo))
                                 .ToList();

        ListaArticulos = ListaArticulosOriginal;

    }

    private void Buscar()
    {
        var prelista = ListaArticulosOriginal.AsEnumerable();

      
        if (desde.HasValue)
            prelista = prelista.Where(a => a.FechaCreacion.Date >= desde.Value.Date);

        if (hasta.HasValue)
            prelista = prelista.Where(a => a.FechaCreacion.Date <= hasta.Value.Date);

      
        if (!string.IsNullOrWhiteSpace(Filtro))
        {
            prelista = prelista.Where(a => a.Estado.ToString() == Filtro);
        }

       
        if (!string.IsNullOrWhiteSpace(tipoAutor))
        {
            if (tipoAutor == "Periodista")
                prelista = prelista.Where(a => a.PeriodistaId.HasValue);
            else if (tipoAutor == "Institucion")
                prelista = prelista.Where(a => a.InstitucionId.HasValue && !a.PeriodistaId.HasValue);
        }

        // Filtrar por texto (título o autor)
        if (!string.IsNullOrWhiteSpace(ValorFiltro))
        {
            prelista = prelista.Where(a =>
                (a.Titulo != null && a.Titulo.Contains(ValorFiltro, StringComparison.OrdinalIgnoreCase)) ||
                (a.Periodista != null && a.Periodista.Nombres != null && a.Periodista.Nombres.Contains(ValorFiltro, StringComparison.OrdinalIgnoreCase)) ||
                (a.Institucion != null && a.Institucion.Nombre != null && a.Institucion.Nombre.Contains(ValorFiltro, StringComparison.OrdinalIgnoreCase))
            );
        }

        ListaArticulos = prelista.ToList();
    }

    private async Task VerDetalle(int articuloId)
    {
        articuloSeleccionado = await ArticuloService.GetArticuloCompleto(articuloId);
        mostrarModal = true;
    }

    private void CerrarModal()
    {
        articuloSeleccionado = null;
        mostrarModal = false;
    }
}