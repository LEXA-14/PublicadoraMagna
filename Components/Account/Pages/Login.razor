
@page "/Account/Login"

@using System.ComponentModel.DataAnnotations
@using Microsoft.AspNetCore.Identity
@using PublicadoraMagna.Data

@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager
@inject ILogger<Login> Logger
@inject NavigationManager NavigationManager
@inject IdentityRedirectManager RedirectManager

<PageTitle>Log in</PageTitle>

<EditForm EditContext="editContext" OnValidSubmit="LoginUser" FormName="LoginForm">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="min-vh-100 d-flex align-items-center justify-content-center position-relative p-4" style="background-color:#103713;">

        <!-- Background decorative circles -->
        <div class="position-absolute" style="top:5%; left:5%; width:20rem; height:20rem; border-radius:50%; background-color:rgba(255,255,255,0.05);"></div>
        <div class="position-absolute" style="top:15%; left:35%; width:12rem; height:12rem; border-radius:50%; background-color:rgba(255,255,255,0.05);"></div>

        <!-- Main card -->
        <div class="card rounded-4 shadow-lg overflow-hidden" style="max-width:1400px; min-height:700px;">
            <div class="row g-0">
                <!-- Left side -->
                <div class="col-lg-7 position-relative p-5 d-flex flex-column justify-content-between" style="background-color:white; clip-path: polygon(0 0, 100% 0, 85% 50%, 100% 100%, 0 100%);">

                    <!-- Logo -->
                    <img src="/logo.png" alt="Publicadora Magna" class="mb-4 mx-auto" style="width:16rem;">

                    <!-- Welcome badge -->
                    <div class="text-center flex-grow-1 d-flex flex-column justify-content-center py-4">
                        <span class="badge rounded-pill mb-3" style="background:linear-gradient(to right,#f9fafb,#f3f4f6); color:#111827;">
                            <span class="me-2">
                                <span class="badge rounded-circle me-1" style="background-color:#103713;">&nbsp;</span>
                                <span class="badge rounded-circle me-1" style="background-color:#f0531c;">&nbsp;</span>
                                <span class="badge rounded-circle" style="background-color:#103713;">&nbsp;</span>
                            </span>
                            Bienvenido
                        </span>

                        <div class="d-flex justify-content-center gap-2 mt-3">
                            <div class="rounded-pill" style="width:10rem; height:0.3rem; background:linear-gradient(to right,#103713,#10371380);"></div>
                            <div class="rounded-pill" style="width:5rem; height:0.3rem; background:linear-gradient(to right,#f0531c,#f0531c80);"></div>
                        </div>
                    </div>

                    <!-- Footer -->
                    <div style="color:#6B7280; font-size:0.9rem;">
                        © 2025 Publicadora Magna <br />
                        <span style="opacity:0.7;">Powered by NOC</span>
                    </div>
                </div>

                <!-- Right side - Form -->
                <div class="col-lg-5 position-relative p-5 d-flex flex-column justify-content-center" style="background-color:#103713; color:white;">
                    <h1 class="mb-3" style="font-size:3rem;">Login</h1>
                    <p style="color:rgba(255,255,255,0.7); font-size:1.2rem;" class="mb-4">Ingresa tus credenciales</p>

                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger">@errorMessage</div>
                    }

                    <!-- Email -->
                    <div class="mb-4">
                        <label for="email" class="form-label">Email</label>
                        <InputText id="email" class="form-control" @bind-Value="Input.Email" placeholder="Enter your email"
                                   style="background-color:rgba(255,255,255,0.1); border:1px solid rgba(255,255,255,0.1); color:white; border-radius:1rem; height:3rem;" />
                        <ValidationMessage For="@(() => Input.Email)" />
                    </div>

                    <!-- Password -->
                    <div class="mb-4 position-relative">
                        <label for="password" class="form-label">Password</label>
                        <InputText id="password" type="@((showPassword) ? "text" : "password")"
                                   class="form-control" @bind-Value="Input.Password" placeholder="Enter your password"
                                   style="background-color:rgba(255,255,255,0.1); border:1px solid rgba(255,255,255,0.1); color:white; border-radius:1rem; height:3rem; padding-right:3rem;" />
                        <button type="button" class="btn position-absolute" style="top:50%; right:0.75rem; transform:translateY(-50%); color:rgba(255,255,255,0.5); font-size:1.25rem;"
                                @onclick="TogglePassword">
                            <i class="bi @(showPassword ? "bi-eye-slash" : "bi-eye")"></i>
                        </button>
                        <ValidationMessage For="@(() => Input.Password)" />
                        <div class="text-end mt-1">
                            <a href="#" style="color:rgba(255,255,255,0.6); font-size:0.85rem; text-decoration:none;">Forgot Password?</a>
                        </div>
                    </div>

                    <!-- Remember Me -->
                    <div class="form-check mb-4">
                        <InputCheckbox id="rememberMe" class="form-check-input" @bind-Value="Input.RememberMe" />
                        <label class="form-check-label" for="rememberMe" style="color:white;">Remember me?</label>
                    </div>

                    <!-- Submit -->
                    <button type="submit" class="btn w-100 mb-3" style="background-color:#f0531c; color:white; border-radius:1rem; height:3rem; font-size:1.2rem;">Login</button>

                    <p class="text-center" style="color:rgba(255,255,255,0.6); font-size:0.9rem;">
                        Don&apos;t have an account? <a href="#" style="color:white; text-decoration:underline;">Register Now</a>
                    </p>

                    <div class="mt-4 text-center">
                        <a href="#" style="color:rgba(255,255,255,0.5); font-size:0.8rem; text-decoration:none;">Terms and Services</a>
                    </div>

                    <div class="mt-2 text-center" style="color:rgba(255,255,255,0.5); font-size:0.8rem;">
                        Have a problem? Contact us at <br />
                        <a href="mailto:NOC@maranathaedu.edu" style="color:rgba(255,255,255,0.6); text-decoration:none;">NOC@maranathaedu.edu</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</EditForm>

@code {
    private string? errorMessage;
    private bool showPassword = false;
    private EditContext editContext = default!;

    [SupplyParameterFromForm]
    private InputModel Input { get; set; } = new();

    private void TogglePassword() => showPassword = !showPassword;

    protected override void OnInitialized()
    {
        editContext = new EditContext(Input);
    }

    private async Task LoginUser()
    {
        if (!editContext.Validate())
        {
            return;
        }

        var result = await SignInManager.PasswordSignInAsync(Input.Email, Input.Password, Input.RememberMe, false);

        if (result.Succeeded)
        {
            var usuario = await UserManager.FindByEmailAsync(Input.Email);
            if (usuario != null)
            {
                var roles = await UserManager.GetRolesAsync(usuario);
                if (roles.Contains("AdminInstitucion"))
                {
                    NavigationManager.NavigateTo("/institucion/dashboard");
                    return;
                }
                else if (roles.Contains("Periodista"))
                {
                    NavigationManager.NavigateTo("/periodista/dashboard");
                    return;
                }
                else if (roles.Contains("Editor"))
                {
                    NavigationManager.NavigateTo("/editor/articulos-index");
                    return;
                }
            }

            NavigationManager.NavigateTo("/");
        }
        else
        {
            errorMessage = "Login failed. Please check your credentials.";
        }
    }

    private sealed class InputModel
    {
        [Required, EmailAddress]
        public string Email { get; set; } = "";

        [Required, DataType(DataType.Password)]
        public string Password { get; set; } = "";

        public bool RememberMe { get; set; }
    }
}
